<div class="component-inner brightcove-inner">
  {{> component this}}
  <div class="component-widget brightcove-widget">
    <div class="brightcove-iframe-holder">
      <iframe allowfullscreen="allowfullscreen" scrolling="{{#if _scrolling}}{{_scrolling}}{{else}}no{{/if}}" class="brightcove-iframe" src="{{_source}}"
        data-height-large="{{_height._large}}" data-height-medium="{{_height._medium}}" data-height-small="{{_height._small}}"
        data-width-large="{{_width._large}}" data-width-medium="{{_width._medium}}" data-width-small="{{_width._small}}">
      </iframe>
    </div>
  </div>
</div>
